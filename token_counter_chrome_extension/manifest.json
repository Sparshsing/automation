{
    "manifest_version": 3,
    "name": "Token Counter",
    "version": "1.3",
    "description": "Calculate the token count and word count of selected text using GPT-style tokenization.",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "background": {
      "service_worker": "dist/background.bundle.js",
      "type": "module"
    },
    "host_permissions": ["<all_urls>"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  